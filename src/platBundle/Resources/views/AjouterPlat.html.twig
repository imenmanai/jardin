    </script>

    <h1 style="margin-left: 30%;">Ajouter un plat</h1>
<div class="container">

<form action="" method="post" name="inscription" >
        <div class="row">
            <div class="col-25">
                <label for="fname">Nom</label>
            </div>
            <div class="col-75">
                <input type="text" id="fname" name="nom"  placeholder="Your name..">
            </div>
        </div>
        <div class="row">
            <div class="col-25">
                <label for="lname">Date</label>
            </div>
            <div class="col-75">
            </div>      <input type="date"  id="lname" name="date" placeholder="Your last name..">

        </div>
        <div class="row">
            <div class="col-25">
                <label for="country">Image</label>
            </div>
            <div class="col-75">
                <input type="file" id="image" name="image" placeholder="Your last name..">

            </div>
        </div>
        <div class="row">
            <div class="col-25">
                <label for="subject">Description</label>
            </div>
            <div class="col-75">
                <textarea id="subject" name="description" placeholder="Write something.." style="height:200px"></textarea>
            </div>
        </div>
