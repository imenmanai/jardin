{% extends 'baseAdmin.html.twig' %}
{% block body %}
<h1 style="font-weight: bold">Categorie des Reclamation</h1>

<table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
    <thead>
    <tr class="gradeC">
        <th>Ref</th>
        <th>Nom</th>
        <th>Description</th>

    </tr>
    </thead>
    {% for CategorieReclamation in CategorieReclamations %}

        <tr class="gradeC">
            <td>{{ CategorieReclamation.ref }}</td>
            <td>{{ CategorieReclamation.nom }}</td>
            <td>{{ CategorieReclamation.description }}</td>
            <td><a href="{{ path('modifierCategorieReclamation',{'ref':CategorieReclamation.ref}) }}">modifier</a></td>
            <td><a href="{{ path('supprimerCategorieReclamation',{'ref':CategorieReclamation.ref}) }}">supprimer</a></td>


        </tr>

    {% endfor %}
</table>
{% endblock %}