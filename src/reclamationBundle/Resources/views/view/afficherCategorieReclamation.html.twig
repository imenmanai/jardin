{% extends'baseAdmin.html.twig' %}
{% block body %}
    <div data-widget-group="group1">
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h2>Data Tables</h2>
                        <div class="panel-ctrls"></div>
                    </div>
                    <div class="panel-body no-padding">
                        <table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
                            <thead>
                            <tr class="gradeC">
                                <th>Ref</th>
                                <th>Nom</th>
                                <th>Description</th>
                                <th>Actions</th>

                            </tr>
                            </thead>
                            {% for CategorieReclamation in CategorieReclamations %}

                                <tr class="gradeC">
                                    <td>{{ CategorieReclamation.ref }}</td>
                                    <td>{{ CategorieReclamation.nom }}</td>
                                    <td>{{ CategorieReclamation.description }}</td>
                                    <td><a href="{{ path('modifierCategorieReclamation',{'ref':CategorieReclamation.ref}) }}" onclick="return confirm('Voulez vous vraiment modifier details de cet Reclamation ?')"><button class="btn btn-primary">Modifier</button></a></td>
                                    <td><a href="{{ path('supprimerCategorieReclamation',{'ref':CategorieReclamation.ref}) }}" onclick="return confirm('Voulez vous vraiment retirer cette Reclamation?')"><button class="btn btn-primary">Supprimer</button></a></td>


                                </tr>

                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <div class="panel-footer">
                        <div class="row"><div class="col-sm-6">
                                <div class="dataTables_info" id="example_info" role="status" aria-live="polite">Showing 1 to 10 of 57 entries</div></div><div class="col-sm-6"><div class="dataTables_paginate paging_bootstrap" id="example_paginate"><ul class="pagination pull-right m-n"><li class="previous disabled"><a href="#">Previous</a></li><li class="active"><a href="#">1</a></li><li><a href="#">2</a></li><li><a href="#">3</a></li><li><a href="#">4</a></li><li><a href="#">5</a></li><li class="next"><a href="#">Next</a></li></ul></div></div></div></div>                </div>
            </div>
        </div>
    </div>

{% endblock %}