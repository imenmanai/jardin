{% extends'baseAdmin.html.twig' %}
{% block body %}
    <div data-widget-group="group1">
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h2>Liste des Reclamations:</h2>
                        <div class="panel-ctrls"></div>
                    </div>
                    <div class="panel-body no-padding">
                        {{ form_start(form) }}
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Categorie Reclamation</label>
                            <div class="col-sm-8">
                                {{ form_widget(form.CategorieReclamation, {'attr': {'class': 'form-control','placeholder':' ...'}}) }}
                            </div>
                        </div>
                        <button class="btn-primary btn" type="submit">Ajouter</button>

                        {{ form_end(form) }}






                        <table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
                            <thead>
                            <tr class="gradeC">
                                <th>Id</th>
                                <th>Etat</th>
                                <th>Date</th>
                                <th>Description</th>
                                <th>CategorieReclamation</th>
                                <th>IdParent</th>


                            </tr>
                            </thead>
                            {% for reclamation in reclamations %}

                                <tr class="gradeC">
                                    <td>{{ reclamation.id }}</td>
                                    <td>{{ reclamation.etat }}</td>
                                    <td>{{ reclamation.date|date("m/d/Y")  }}</td>
                                    <td>{{ reclamation.description }}</td>
                                    <td>{{ reclamation.CategorieReclamation.nom}}</td>
                                    <td>{{ reclamation.idParent }}</td>


                                </tr>
                            {% endfor %}
                        </table>
                    </div>
                    <div class="panel-footer">

        </div>
    </div>

{% endblock %}