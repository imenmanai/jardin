{% extends 'base.html.twig' %}
{% block body %}
    <h1 style="font-weight: bold">Historique des Reclamation:</h1>

    <div class="table-content table-responsive">
    <table>
    <thead>
<tr class="title-top">
    <tr style="font-weight:bold">
        <th class="product-name">Id</th>
        <th class="product-price">etat</th>
        <th class="product-subtotal">Nom Categorie</th>
        <th class="product-subtotal">Modification</th>
        <th class="product-subtotal">Suppression</th>
        <th class="product-subtotal">Afficher Detaille</th>


</tr>
    </thead>
    {% for reclamation in reclamations %}

        <tr>
            <td>{{ reclamation.id }}</td>
            <td>{{ reclamation.etat }}</td>
            <td>{{ reclamation.CategorieReclamation.nom}}</td>

            <td><a href="{{ path('modifierReclamation',{'id':reclamation.id}) }}">modifier</a></td>
            <td><a href="{{ path('supprimerReclamation',{'id':reclamation.id}) }}">supprimer</a></td>
            <td><a href="{{ path('afficherDetaille',{'id':reclamation.id}) }}">afficherDetaille</a></td>



        </tr>

    {% endfor %}
</table>
{% endblock %}