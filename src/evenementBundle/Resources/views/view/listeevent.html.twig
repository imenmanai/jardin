
{% extends'baseAdmin.html.twig' %}
{% block body %}
<div data-widget-group="group1">
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h2>Data Tables</h2>
                    <div class="panel-ctrls"></div>
                </div>
                <div class="panel-body no-padding">
<table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
    <tr>
        <th>descr</th>
        <th>date</th>
        <th>nbpartic</th>
        <th>nom</th>
        <th>adresse evenement</th>
        <th>image</th>
        <th>action</th>

    </tr>
    {% for m in cours %}
        <tr>

            <td>{{ m.description}}</td>
            <td>{{ m.date|date}}</td>
            <td>{{ m.nbpart }}</td>
            <td>{{ m.nom }}</td>
            <td>{{ m.local }}</td>

            <td><img src="{{ asset('images/' ~ m.image) }} " style="width: 50px;"></td>
            <td><a href="{{ path('suppevent',{'id':m.id}) }}"><img width="20" height="20" src="{{ asset('images/icon/supprimer.png') }}" ></a>
                <a href="{{ path('modifierevent',{'id':m.id}) }}"><img width="40" height="40" src="{{ asset('images/icon/modifier.png') }}" ></a></td>


        </tr>
    {% endfor %}

</table>

                </div>
