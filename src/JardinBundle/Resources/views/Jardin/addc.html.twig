{% extends'baseAdmin.html.twig' %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block body %}


    <h1 style="margin-left: 30%;">Ajouter Catégorie</h1>
    {{ form_start(form,{'attr': {'novalidate': 'novalidate'}}) }}


    {{ form_row(form.type, {'attr':{'placeholder':"nom.."}}) }}

    {{ form_row(form.description,{'attr':{'placeholder':"prenom.."}}) }}


    <button type="submit" class="btn-primary btn"> Ajouter Catégorie </button>
    {{ form_end(form) }}

    <script src="{{ asset('js/vendor/jquery-3.2.1.min.js') }}"></script>
    <script>
        $(document).ready(function () {

            $("#span2").hide();
            $("#span1").hide();
            $("#span4").hide();
            $("#span5").hide();
            $("#span6").hide();

            $('#jardinbundle_personnel_nom').keyup(function () {

                var nom = $('#jardinbundle_personnel_nom').val();
                var test=/^[A-Za-z]+$/;
                if (test.test(nom)) {

                    $('#span2').hide();

                    $('#ajouter').prop('disabled', false);

                } else {
                    $('#span2').show();



                    $('#ajouter').prop('disabled', true);
                }
            });

            $('#jardinbundle_personnel_prenom').keyup(function () {

                var prenom = $('#jardinbundle_personnel_prenom').val();
                var test=/^[A-Za-z]+$/;
                if (test.test(prenom)) {

                    $('#span1').hide();

                    $('#ajouter').prop('disabled', false);

                } else {
                    $('#span1').show();



                    $('#ajouter').prop('disabled', true);
                }
            });

            $('#jardinbundle_personnel_age').keyup(function () {

                var nom = $('#jardinbundle_personnel_age').val();
                var test=/^['25'-'40']+$/;
                if (test.test(nom)) {


                    $('#span4').hide();
                    $('#ajouter').prop('disabled', false);

                } else {
                    $('#span4').show();


                    $('#ajouter').prop('disabled', true);
                }

            });
            $('#jardinbundle_personnel_nbH').keyup(function () {

                var nom = $('#jardinbundle_personnel_nbH').val();
                var test=/^['10'-'15']+$/;
                if (test.test(nom)) {

                    $('#span5').hide();

                    $('#ajouter').prop('disabled', false);

                } else {
                    $('#span5').show();



                    $('#ajouter').prop('disabled', true);
                }
            });

            $('#jardinbundle_personnel_prixH').keyup(function () {

                var prenom = $('#jardinbundle_personnel_prixH').val();
                var test=/^[1-9]+$/;
                if (test.test(prenom)) {

                    $('#span6').hide();

                    $('#ajouter').prop('disabled', false);

                } else {
                    $('#span6').show();



                    $('#ajouter').prop('disabled', true);
                }
            });















        })
    </script>
{% endblock %}
